@using TempoWorklogger.Contract.UI.ViewModels.ImportWizard
<header class="col-md-auto col-12 process-bar" style="max-width: 100%">
    <ul id="progressbar" class="text-cetner">
        <li class="@(current >= (int)Model.UI.ImportWizardStepKind.File ? "active" : "")" id="file"><strong>File</strong></li>
        <li class="@(current >= (int)Model.UI.ImportWizardStepKind.Template ? "active" : "")" id="template"><strong>Template</strong></li>
        <li class="@(current >= (int)Model.UI.ImportWizardStepKind.Preview ? "active" : "")" id="preview"><strong>Preview</strong></li>
        <li class="@(current >= (int)Model.UI.ImportWizardStepKind.Process ? "active" : "")" id="process"><strong>Process</strong></li>
    </ul>
</header>

@code {
    private int current = 0;

    [Parameter]
    public Model.UI.ImportWizardStepKind ActualStep { get => (Model.UI.ImportWizardStepKind)current; set => current = (int)value; }
}