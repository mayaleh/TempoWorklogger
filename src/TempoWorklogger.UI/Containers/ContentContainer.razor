@StaticContent

@if(IsLoading)
{
	<div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
	return;
}

@if (IsBusy)
{
    <div style="position: absolute; height: 100%; width: 100%; z-index: 9999; opacity: 0.9; background: grey;" class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}

@Content
